<div class="container">
  <div class="row">
    <div class="col-md-4">
      
      <% if user_signed_in? %>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Your Account</h5>
            <p class="card-text"><%= current_user.email %></p>      
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-8">

      <% if user_signed_in? %>
        <%= link_to 'New Tweet', new_tweet_path, class: "btn btn-primary" %>
      <% end %>
      <div class="card" style="width: 18rem;">
        <ul class="list-group list-group-flush">
          <% @tweets.each do |tweet| %>
            <%= link_to tweet, class: "list-group-item list-group-item-action" do %>
              <h5 class="list-group-item-heading"><%= tweet.user.email %></h5>
              <p class="list-group-item-text"><%= tweet.content %></p>
              <p class="list-group-item">

                <% if tweet.user == current_user %>
                  <%= link_to 'Edit', edit_tweet_path(tweet), class: "btn btn-primary" %>
                  <%= link_to 'Destroy', tweet, class: "btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
              </p>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>